<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.fhtagn.zoobgame"
      android:versionCode="5"
      android:versionName="1.0.2">
    <application android:icon="@drawable/icon" 
                 android:label="@string/app_name"
                 android:name="ZoobApplication"
                 android:debuggable="true">
        <activity android:name=".Zoob"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen" 
                  android:configChanges="keyboard|keyboardHidden|orientation">
            <intent-filter>
                <action android:name="net.fhtagn.zoobgame.PLAY" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="content"/>
            </intent-filter>
        </activity>
        
        <activity android:name=".menus.MainMenu"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>          
        </activity>
        
        <activity android:name=".menus.OptionsMenu"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
        <activity android:name=".menus.HelpMenu"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
        <activity android:name=".menus.WonMenu"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
        <activity android:name=".menus.LostMenu"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
        <activity android:name=".menus.EndMenu"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
        

        <provider android:name="SerieContentProvider"
                  android:authorities="net.fhtagn.zoobgame.SerieContentProvider" />
    </application>
    
    <uses-sdk android:minSdkVersion="3" />
</manifest> 