import glob
import os
dirs = ['ai','containers','levels','lib','logic','logic/physics','view','view/menu', 'ai/movement', 'ai/shoot', 'ai/algorithms']
files = [glob.glob(dir+'/*.cpp') for dir in dirs]

cflags = '-ggdb -Wall -DPLATFORM_SDL'
ldflags = '-lm -lSDL -lGL -lpng -lzip'

env = Environment(ENV = {'PATH': os.environ['PATH']},
                  CPPPATH=['.'],
                  CXX='g++',
                  CXXFLAGS=cflags,
                  LINKFLAGS=ldflags)

env.Program(target='./app', source=['app-sdl.cpp','app.cpp']+files)

